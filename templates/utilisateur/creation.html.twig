{% extends 'base.html.twig' %}

{% block title %} Créez votre profil {% endblock %}

{% block content %}

    <main>
        {{ form_start(formUser, {'attr': {'class': 'center basic-form'}}) }}
        <fieldset>
            <legend>Inscription</legend>
            <div class="access-container">
                {{ form_label(formUser.login, 'Votre login') }}
                <p class="help-input-form">Entre 4 et 20 caractères</p>
                {{ form_widget(formUser.login, {'id': 'login', 'attr': {'placeholder': "Entrez votre login."}}) }}
            </div>
            <div class="access-container">
                {{ form_label(formUser.plainPassword, 'Votre mot de passe') }}
                <p class="help-input-form">Entre 8 et 30 caractères, au moins une minuscule, une majuscule et un nombre</p>
                {{ form_widget(formUser.plainPassword, {'id': 'password', 'attr': {'placeholder': 'Entrez votre mot de passe'}}) }}
            </div>
            <div class="access-container">
                {{ form_label(formUser.adresseEmail, 'Votre adresse email') }}
                {{ form_widget(formUser.adresseEmail, {'id': 'email', 'attr': {'placeholder': 'Entrez votre adresse email'}}) }}
            </div>
            <div class="access-container">
                {{ form_label(formUser.fichierPhotoDeProfil, 'Votre photo de profil (optionnel)') }}
                {{ form_widget(formUser.fichierPhotoDeProfil, {'id': 'photo','required' : '', 'attr' : {'accept' : 'image/png, image/jpeg', 'placeholder': 'Déposez votre photo de profil (optionnel)'}}) }}
            </div>
            <!-- Affichage du bouton d'envoi, contenant le texte (label) "S'inscrire" -->
            {{ form_widget(formUser.inscription, {'label': "S'inscrire", 'attr': {'class': 'basic-form-submit'}}) }}
        </fieldset>
        {{ form_rest(formUser) }}
        {{ form_end(formUser) }}
    </main>

{% endblock %}
